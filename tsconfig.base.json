{
  "compilerOptions": {
    "target": "ES2020",
    "declaration": true,
    "strict": true,
    "resolveJsonModule": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "allowJs": true,
    "types": [
      "./global.d.ts"
    ]
  },
  "include": [
    "./src/index.ts",
    "./src/lit-actions/src/foo.ts",
    "./src/lit-actions/**/*.ts",
    "./src/lit-actions/dist/*.js",
    "./global.d.ts",
    "src/**/*",
  ],
}